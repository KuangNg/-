/* pages/cart/index.wxss */
page {
  padding-bottom: 90rpx;
}
.revice_address_row .address_info_row {
  display: flex;
  padding: 20rpx;
}
.revice_address_row .address_info_row .address_info {
  flex: 5;
}
.revice_address_row .address_info_row .telNumber {
  flex: 3;
  text-align: right;
}
.cart_content .cart_title {
  font-size: 32rpx;
  padding: 20rpx;
  color: var(--themeColor);
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  margin: 20rpx 0;
}
.cart_content .cart_list .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}
.cart_content .cart_list .cart_item .goods_img_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_list .cart_item .goods_img_wrap image {
  width: 80%;
}
.cart_content .cart_list .cart_item .goods_info_wrap {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cart_content .cart_list .cart_item .goods_info_wrap .goods_info {
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_list .cart_item .goods_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_list .cart_item .goods_info_wrap .goods_price_wrap .price {
  color: var(--themeColor);
  font-size: 32rpx;
  font-weight: 700;
}
.cart_content .cart_list .cart_item .goods_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_list .cart_item .goods_info_wrap .goods_price_wrap .cart_num_tool .num {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  height: 55rpx;
  margin: 0 -1px;
}
.footer_tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer_tool .total_price_wrap {
  flex: 5;
  padding-right: 15rpx;
  text-align: left;
  padding-left: 30rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.footer_tool .order_pay_wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}

.index_swiper swiper {
  width: 750rpx;
  height: 340rpx;
}
.index_swiper swiper .swiper_item image {
  width: 100%;
}
.index_cate {
  display: flex;
}
.index_cate .cate_items {
  flex: 1;
  padding: 30rpx;
}
.index_cate .cate_items image {
  width: 100%;
}
.index_floor .floor_ground .floor_title {
  padding: 10rpx 0;
}
.index_floor .floor_ground .floor_title image {
  width: 100%;
}
.index_floor .floor_ground .floor_content {
  overflow: hidden;
}
.index_floor .floor_ground .floor_content navigator {
  float: left;
  width: 33.33%;
  /* 后面四个超链接 */
  /* 2 3  超链接*/
}
.index_floor .floor_ground .floor_content navigator:nth-last-child(-n+4) {
  /* 
          原图的宽高 232*386
          232 / 386 = 33.33vw/ height
          第一张图片的高度 height:386*33.33vw / 232
          */
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;
}
.index_floor .floor_ground .floor_content navigator:nth-child(2),
.index_floor .floor_ground .floor_content navigator:nth-child(3) {
  border-bottom: 10rpx solid #fff;
}
.index_floor .floor_ground .floor_content navigator image {
  width: 100%;
  height: 100%;
}
